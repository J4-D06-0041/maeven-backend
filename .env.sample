# Sample environment variables for maeven-backend (safe to commit)
# Copy this file to `.env` and replace placeholders with real values.

# Preferred: Full connection string for hosted Postgres providers
DATABASE_URL=postgresql://<username>:<password>@<host>:5432/<dbname>?sslmode=require

# Or: individual connection values (optional)
# DB_HOST=<host>
# DB_PORT=5432
# DB_NAME=<dbname>
# DB_USER=<username>
# DB_PASS=<password>

# SSL settings
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=false

# App port
PORT=3000
